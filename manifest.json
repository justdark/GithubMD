{  
  "name": "GithubMD",
  "manifest_version":2,
  "version": "0.1",  
  "description": "a markdown style to replace the github version, support math equations and code highlight", 
  "content_scripts": [{
   "matches": ["https://github.com/*md"], 
   "js": ["js/marked.js","js/markdown.js","js/main.js"], 
   "css": ["css/main.css"],
    "run_at": "document_end",
   "all_frames": true 
   }],
   "web_accessible_resources":["page.html","js/sub.js"],
   "permissions": [
    "https://github.com/*md","webRequest","webRequestBlocking"
    ],
  "background" :{
    "scripts": ["js/bgp.js"],
    "persistent": true
  }
 }